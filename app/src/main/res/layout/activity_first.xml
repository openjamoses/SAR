<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.denisfaith.mustsar.activities.FirstActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/must">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="223dp"
            android:layout_height="216dp"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="102dp"
            android:layout_centerInParent="true"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registered by:"
            android:textColor="#a10404"
            android:textSize="23sp"

            android:layout_alignParentTop="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="408dp" />

    </RelativeLayout>




    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:text="student attendence Registration"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="246dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_std"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e9f9bc"
            android:text="Student"
            android:layout_weight="1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="447dp" />

        <Button
            android:id="@+id/btn_lect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="#e9f9bc"
            android:layout_weight="1"
            android:layout_marginLeft="20sp"
            android:text="Lecturer"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="447dp"
            android:layout_marginRight="4dp" />

    </LinearLayout>


</RelativeLayout>
